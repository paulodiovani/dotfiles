# automatically add keys to agent, like using ssd-add
# AddKeysToAgent yes

# use several identity files
# IdentitiesOnly yes
# IdentityFile ~/.ssh/id_rsa    # default
# IdentityFile ~/.ssh/other_id  # addicional identity file

# forward authentication agent
# ForwardAgent yes

# add compression
Compression yes

# do not ask for confirmation to connect to new hosts
# neither block when host key changes
# StrictHostKeyChecking no

# show randomart visual key
VisualHostKey yes
