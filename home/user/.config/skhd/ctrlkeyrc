# allow using Ctrl key as Cmd
ctrl - a [
  "firefox" : skhd -k "cmd - a"
  "google chrome" : skhd -k "cmd - a"
  "safari" : skhd -k "cmd - a"
]

ctrl - c [
  "firefox" : skhd -k "cmd - c"
  "google chrome" : skhd -k "cmd - c"
  "safari" : skhd -k "cmd - c"
]

ctrl - k [
  "firefox" : skhd -k "cmd - k"
  "google chrome" : skhd -k "cmd - k"
  "safari" : skhd -k "cmd - k"
]

ctrl - l [
  "firefox" : skhd -k "cmd - l"
  "google chrome" : skhd -k "cmd - l"
  "safari" : skhd -k "cmd - l"
]

ctrl - r [
  "firefox" : skhd -k "cmd - r"
  "google chrome" : skhd -k "cmd - r"
  "safari" : skhd -k "cmd - r"
]

ctrl - t [
  "firefox" : skhd -k "cmd - t"
  "google chrome" : skhd -k "cmd - t"
  "safari" : skhd -k "cmd - t"
]

ctrl - v [
  "firefox" : skhd -k "cmd - v"
  "google chrome" : skhd -k "cmd - v"
  "safari" : skhd -k "cmd - v"
]

ctrl - w [
  "firefox" : skhd -k "cmd - w"
  "google chrome" : skhd -k "cmd - w"
  "safari" : skhd -k "cmd - w"
]

ctrl - x [
  "firefox" : skhd -k "cmd - x"
  "google chrome" : skhd -k "cmd - x"
  "safari" : skhd -k "cmd - x"
]

ctrl - z [
  "firefox" : skhd -k "cmd - z"
  "google chrome" : skhd -k "cmd - z"
  "safari" : skhd -k "cmd - z"
]

shift + ctrl - p [
  "firefox" : skhd -k "shift + cmd - p"
  "google chrome" : skhd -k "shift + cmd - p"
  "safari" : skhd -k "shift + cmd - p"
]

shift + ctrl - t [
  "firefox" : skhd -k "shift + cmd - t"
  "google chrome" : skhd -k "shift + cmd - t"
  "safari" : skhd -k "shift + cmd - t"
]
