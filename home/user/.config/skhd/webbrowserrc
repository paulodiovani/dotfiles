# Refresh / force refresh
f5 [
  "google chrome" : skhd -k "cmd - r"
]

ctrl - f5 [
  "firefox" : skhd -k "shift + cmd - r"
  "google chrome" : skhd -k "shift + cmd - r"
  "safari" : skhd -k "shift + cmd - r"
]

# (re)open tab in new window
shift + ctrl - n [
  "firefox" : skhd -k "ctrl - l | shift - enter"
  "google chrome" : skhd -k "ctrl - l" && sleep 0.1 && skhd -k "shift - return"
]
